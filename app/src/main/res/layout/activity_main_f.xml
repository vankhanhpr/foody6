<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:background="@color/red1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imv_back10"
                android:layout_width="60px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:background="@drawable/back"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Danh mục"
                    android:textSize="20sp"
                    android:layout_marginTop="15px"
                    android:layout_marginLeft="100px"
                    android:textColor="@color/while1"
                    android:gravity="fill_vertical" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khám phá"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="280px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_marginTop="20px"
                            android:layout_width="90px"
                            android:layout_height="90px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_foody"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ăn uống"
                            android:textSize="15sp"
                            android:layout_marginTop="20px"
                            android:layout_marginLeft="20px"
                            android:textColor="@color/black"
                            android:id="@+id/textView2" />

                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="110px"
                            android:layout_height="110px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_laban"
                            android:id="@+id/imageView3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="  Du lịch"
                            android:textSize="15sp"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="30px"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="110px"
                            android:layout_height="110px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_weding"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Cưới hỏi"
                            android:textSize="15sp"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="30px"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="110px"
                            android:layout_height="110px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_depkhoe"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Đẹp khỏe"
                            android:textSize="15sp"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="30px"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:background="@color/while1"
                    android:layout_width="match_parent"
                    android:layout_height="250px"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="110px"
                            android:layout_height="110px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_relax"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Giải trí"
                            android:textSize="15sp"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="30px"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="110px"
                            android:layout_height="110px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_shopping"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Mua sắm"
                            android:textSize="15sp"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="30px"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="110px"
                            android:layout_height="110px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_giaoduc"
                            android:id="@+id/imageView" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Giáo dục"
                            android:textSize="15sp"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="30px"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/while1"
                        android:layout_width="match_parent"
                        android:layout_height="250px"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="110px"
                            android:layout_height="110px"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/icon_cham"
                            android:id="@+id/imageView2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Dịch vụ"
                            android:textSize="15sp"
                            android:layout_marginTop="10px"
                            android:layout_marginLeft="30px"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giao hàng và đặt chỗ"
                    android:textSize="15sp"
                    android:layout_marginBottom="30px"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:background="@drawable/icon_top2"
                        android:layout_width="150dp"
                        android:layout_height="50dp">
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Đặt giao hàng"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:background="@drawable/icon_top1"
                        android:layout_width="150dp"
                        android:layout_height="50dp">

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Đặt chỗ ưu đãi"
                        android:textSize="15sp"
                        android:id="@+id/textView5"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>