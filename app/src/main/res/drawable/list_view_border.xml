<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.0px" android:color="@color/colorWhite" />
            <gradient android:startColor="#aaffffff" android:endColor="#aaffffff" android:centerColor="#aaffffff" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1.0px" android:color="@color/colorWhite" />
            <gradient android:startColor="#22ffffff" android:endColor="#22ffffff" android:centerColor="#22ffffff" />
        </shape>
    </item>
</selector>